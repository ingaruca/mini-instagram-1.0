<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true" >

    <RelativeLayout

        android:id="@+id/containerMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">
        
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imgfoto"
            android:layout_width="@dimen/img.item.size"
            android:layout_height="@dimen/img.item.size"
            android:src="@drawable/ic_account_circle"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvPersona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="@string/persona.hint.nombre"
            android:maxLines="2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_toEndOf="@id/imgfoto"
            android:layout_toRightOf="@id/imgfoto"
            android:layout_toStartOf="@+id/tvOrden"
            android:layout_toLeftOf="@id/tvOrden"

            android:layout_centerVertical="true" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvOrden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="@string/persona.hint.orden"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="@dimen/main.padding.small"
            android:drawableBottom="@drawable/ic_star"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>